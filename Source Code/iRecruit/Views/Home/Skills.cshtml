@using System.Web.Optimization
@{
    Layout = null;
}

<style>
    .chosen-container .search-field{
        height:34px;
    }
        
</style>
<section class="content-header">
    <div class="row">
        <div class="col-lg-8">
        <a href="javascript:window.history.back();" class="back-button big"></a>     
        <h1 style="font-size:36px;margin-left:80px; margin-top:45px">Technologies and Skills
        </h1>
        </div>
        </div>
</section>

<section class="content">
 <div class="row">
     <form name="userForm" ng-submit="submitForm(userForm.$valid);" novalidate>
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Technology and Skills Information</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                                
                    <div class="box-body">
                        <div ng-show="1!=1">{{ts.TechnologyAndSkillID}}</div>
                        
                        <div class="form-group">
                            <label>Code</label>
                            <input class="form-control" name="Code" ng-model="ts.Code" required placeholder="Enter technology or skill code" type="text">
                             <p ng-show="userForm.Code.$invalid && $formPristine" class="has-error">This is required.</p>
                        </div>

                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" name="Name" ng-model="ts.Name" required placeholder="Enter name/description" type="text">
                             <p ng-show="userForm.Name.$invalid && $formPristine" class="has-error">This is required.</p>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Skill Type</label>
                            <div class="form-inline">
                                <label class="radio" style="padding-right:15px;font-weight:normal">
                                    <input type="radio" value="1" name="skillt" ng-model="ts.SkillType" /> Technical&nbsp;
                                </label>
                                <label class="radio" style="padding-right:15px;font-weight:normal">
                                    <input type="radio" value="2" name="skillt" ng-model="ts.SkillType" /> Behavioural&nbsp;
                                </label>
                            </div>
                            <p ng-show="userForm.skillt.$invalid && $formPristine" class="has-error">This is required.</p>
			            </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div><!-- /.box-body -->

                                
            </div><!-- /.box -->
      </form>             
        </div><!--/.col (left) -->
        <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header bg-light-blue">
                    <h3 class="box-title">Technologies and Skills</h3>
                    <div class="box-tools">
                        <div class="input-group">
                            <input name="table_search" ng-model="table_search" class="form-control input-sm pull-right" style="width: 200px;" placeholder="Search" type="text">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody><tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Skill Type</th>
                        </tr>
                        <tr ng-repeat="i in data.technologies | filter:table_search" ng-click="selectData(data.technologies.indexOf(i));"
                            ng-class="{success: i.SkillType ==1, danger: i.SkillType ==2}">
                            <td>{{i.Code}}</td>
                            <td>{{i.Name}}</td>
                            <td>
                                <div ng-switch on="i.SkillType">
                                  <div ng-switch-when="1">Technical</div>
                                  <div ng-switch-when="2">Behavioural</div>
                                  <div ng-switch-default>Others</div>
                                </div>
                            </td>
                        </tr>
                        
                    </tbody></table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
    </section><!-- /.content -->



