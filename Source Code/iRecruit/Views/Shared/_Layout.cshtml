@using System.Web.Optimization
@using iRecruit.Extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>iRecruit</title>
    @Styles.Render("~/css/jquery/themes/base/css")
    @Styles.Render("~/css/bootstrap")
    @Styles.Render("~/css/plugins")
    @Styles.Render("~/css/site")

    @Scripts.Render("~/scripts/jquery")
    @Scripts.Render("~/scripts/bootstrap")
    @Scripts.Render("~/scripts/angular")
    @Scripts.Render("~/scripts/plugins")
    @Scripts.Render("~/scripts/app/services")
    @Scripts.Render("~/scripts/app/directives")
    @Scripts.Render("~/scripts/app/modules")
    @Scripts.Render("~/scripts/app")


