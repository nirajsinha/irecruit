@using System.Web.Optimization
@{
    Layout = null;
}
<!-- Content Header (Page header) -->
 <style type="text/css">
		[ac-chart] {
			float:left;
			width: 100%;
			height: 350px;
			margin: 0 1%;
            align-content: center;
		}

        .ac-tooltip {
            color: black;
            border: 2px solid rgba(200,200,0,0.8);
            background-color: rgba(200,200,0,0.5);
        }
        .ac-legend {
            font-size:12px;
        }
        .ac-legend table tr td{
            padding-right:5px;
            padding-left:0px;
        }
        #chart1 .ac-legend-box {
            border-radius: 10px;
        }
     
	</style>               
<section class="content-header">
        <h1 style="font-size:36px;">
            <img src="~/images/documents.png" class="img-circle" alt="User Image">Dashboard
            <small>Snapshot</small>{{status}}
        </h1>
        @*<ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>*@

    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-2 col-xs-3">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>{{OpenPositions}}</h3>
                        <p>Open Positions</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a ui-sref="indenttracker" class="small-box-footer">
                        More info <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-2 col-xs-3">
                <!-- small box -->
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3>{{InProcess}}</h3>
                        <p>In Process</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-coffee"></i>
                    </div>
                    <a ui-sref="resumesearch" class="small-box-footer">
                        More info <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-2 col-xs-3">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>{{RejectedDenied}}</h3>
                        <p>Rejected / Denied</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-android-close"></i>
                    </div>
                    <a ui-sref="resumesearch" class="small-box-footer">
                        More info <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-2 col-xs-3">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>{{OffersMade}}</h3>
                        <p>Offer Made</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a ui-sref="resumesearch" class="small-box-footer">
                        More info <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-2 col-xs-3">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>{{OnBoard}}</h3>
                        <p>On Board</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-stalker"></i>
                    </div>
                    <a ui-sref="resumesearch" class="small-box-footer">
                        More info <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div><!-- ./col -->
            
            <div class="col-lg-2 col-xs-3">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>{{BounceRate}}<sup style="font-size: 20px">%</sup></h3>
                        <p>Bounce Rate</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <div class="small-box-footer">
                        &nbsp;
                    </div>
                </div>
            </div><!-- ./col -->
            
        </div><!-- /.row -->

        <!-- top row -->
        <div class="row">
            <div class="col-xs-12 connectedSortable ui-sortable">
                            
            </div><!-- /.col -->
        </div>
        <!-- /.row -->

        <!-- Main row -->
        <div class="row">
            <section class="col-lg-4 connectedSortable ui-sortable"> 
                 <div class="box box-primary">
                    <div class="box-header bg-info" style="cursor: move;">
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button class="btn btn-primary btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-primary btn-sm refresh-btn" data-toggle="tooltip" title="" data-original-title="Reload" ng-click="RefreshTopOpenings()"><i class="fa fa-refresh"></i></button>
                        </div><!-- /. tools -->
                        
                        <i class="fa fa-bar-chart-o"></i>

                        <span class="box-title">5 Top Openings</span>
                    </div><!-- /.box-header -->
                    <div class="box-body no-padding" id="top_openings" style="display: block;">
                        <div class="row">
                            <div class="col-sm-12 col-md-offset-0">
                                <div id="top_openings_chart" ac-chart="TopOpeningsChartType" ac-data="TopOpeningsData" ac-config="TopOpeningsChartConfig"></div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </section>
            <section class="col-lg-4 connectedSortable ui-sortable">
             <div class="box box-danger" >
                    <div class="box-header bg-danger" style="cursor: move;">
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button class="btn btn-danger btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-danger btn-sm refresh-btn" data-toggle="tooltip" title="" data-original-title="Reload" ng-click="RefreshEmployeeReferalData()"><i class="fa fa-refresh"></i></button>
                        </div><!-- /. tools -->
                        <i class="fa fa-bar-chart-o"></i>

                        <span class="box-title">Recruitment Sources</span>
                    </div><!-- /.box-header -->
                    <div class="box-body no-padding" style="display: block;">
                        <div class="row">
                            <div class="col-sm-12 col-md-offset-0">
                                <div id="recruitment_sources" ac-chart="EmployeeReferalChartType" ac-data="EmployeeReferalData" ac-config="EmployeeReferalChartConfig"></div>
                            </div>
                            
                        </div><!-- /.row - inside box -->
                    </div><!-- /.box-body -->
                    
                </div>
            </section>
            <section class="col-lg-4 connectedSortable ui-sortable">
                <div class="box box-danger" id="offer-to-joining-box">
                    <div class="box-header bg-maroon" style="cursor: move;">
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button class="btn btn-danger btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-danger btn-sm refresh-btn" data-toggle="tooltip" title="" data-original-title="Reload" ng-click="RefreshOfferJoiningRatio()"><i class="fa fa-refresh"></i></button>
                            @*<button class="btn btn-danger btn-sm" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove"><i class="fa fa-times"></i></button>*@
                        </div><!-- /. tools -->
                        <i class="fa fa-bar-chart-o"></i>

                        <span class="box-title">Offer to Joining Ratio (Sample)</span>
                    </div><!-- /.box-header -->
                    <div class="box-body no-padding">
                        <div class="row">
                            <div class="col-sm-12 col-md-offset-0">
                                <div id="offerjoining" ac-chart="OfferJoiningRatioChartType" ac-data="OfferJoiningRatioData" ac-config="OfferJoiningRatioChartConfig"></div>
                            </div>
                            
                        </div><!-- /.row - inside box -->
                    </div><!-- /.box-body -->
                </div>
            </section>
        </div>

    </section><!-- /.content -->

@section scripts{
   
    
}